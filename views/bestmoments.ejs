<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <!-- CSS PC -->

    <link rel="icon" href="images/suveradaicon.ico" />
    <link
      rel="stylesheet"
      media="only screen and (min-width: 1000px)"
      href="/stylesheets/pc/general.css"
    />
    <link
      rel="stylesheet"
      media="only screen and (min-width: 1000px)"
      href="/stylesheets/pc/navbar.css"
    />
    <link
      rel="stylesheet"
      media="only screen and (min-width: 1000px)"
      href="/stylesheets/pc/best.css"
    />

    <!-- CSS MOVIL -->

    <link
      rel="stylesheet"
      media="only screen and (max-width: 1000px)"
      href="stylesheets/movil/movil.css"
    />

    <!-- BOOTSTRAP -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- FONTS -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anonymous+Pro:ital@1&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Armata&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" />
      <script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>
    

    <%- include("partials/navigation.html") %>

    <div class="container">
      <h1 class="text-center my-5 title"><%= title %></h1>
      <div class="row">
        <%
        moments.forEach(moment => { %>
          <% if (moment.type === "video") { %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <video src="<%= moment.media %>" class="card-img-top" controls></video>
                <div class="card-body">
                  <h5 class="card-title"><%= moment.text %></h5>
                  <p class="card-text"><%= moment.date %></p>
                </div>
              </div>
            </div>
          <% } else if (moment.type === "image") { %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <a href="<%= moment.media %>" data-fancybox>
                  <img src="<%= moment.media %>" class="card-img-top" alt="..." />
                </a>
                <div class="card-body">
                  <h5 class="card-title"><%= moment.text %></h5>
                  <p class="card-text"><%= moment.date %></p>
                </div>
              </div>
            </div>
          <% } %>
        <%  }); %>
      </div>
    </div>
    
    <div id="hidden-content" style="display:none;">
      <div id="fancybox-content">
        <img id="fancybox-img" alt="" src="" />
        <div id="fancybox-caption" class="fancybox-caption"></div>
        <button id="fancybox-close-btn">Close</button>
      </div>
    </div>
    
    
    
    <script>
    $("[data-fancybox]").on("click", function(e) {
    e.preventDefault();
    $("#hidden-content").fadeIn();
    $("body").addClass("modal-open");
    $("#fancybox-img").attr("src", $(this).attr("href"));
    $("#fancybox-caption").text($(this).find("img").attr("alt"));
    $("#fancybox-close-btn").show();
  });

  $("#hidden-content").on("click", function(e) {
    if ($(e.target).attr("id") === "hidden-content") {
      $("#hidden-content").fadeOut();
      $("body").removeClass("modal-open");
    }
  });

  $("#fancybox-close-btn").on("click", function() {
    $("#hidden-content").fadeOut();
    $("body").removeClass("modal-open");
  });
    </script>
    
    
  </body>
</html>
