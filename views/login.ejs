<!DOCTYPE html>
<html lang="en">
<head>
    
    <!-- CSS PC -->

    <link rel="icon" href="images/suveradaicon.ico" />
    <link
      rel="stylesheet"
      media="only screen and (min-width: 1000px)"
      href="/stylesheets/pc/general.css"
    />
    <link
      rel="stylesheet"
      media="only screen and (min-width: 1000px)"
      href="/stylesheets/pc/login.css"
    />
    <link
      rel="stylesheet"
      media="only screen and (min-width: 1000px)"
      href="/stylesheets/pc/navbar.css"
    />

    <!-- CSS MOVIL -->

    <link
      rel="stylesheet"
      media="only screen and (max-width: 1000px)"
      href="stylesheets/movil/movil.css"
    />

    <!-- BOOTSTRAP -->

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- FONTS -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anonymous+Pro:ital@1&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Armata&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

</head>
<body>

    <%- include("partials/navigation.html") %>


    <div class="login-form">
        <h2>Login</h2>
        <form action="/auth" method="post">
            <input type="text" name="user" id="user" placeholder="User" required>
            <input type="password" name="pass" id="pass" placeholder="Password" required>
            <input type="submit" class="btn-login" value="Login">
        </form>
        <p>No tienes una cuenta? <a href="register" class="btn-register">Registate</a></p>
    </div>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert != "undefined") { %>

      <script>
        Swal.fire({
          title: "<%= alertTitle %>",
          text: "<%= alertMessage %>",
          icon: "<%= alertIcon %>",
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(()=>{
          window.location= "/<%= ruta %>"
        })
      </script>

      <% } %>


</body>
</html>