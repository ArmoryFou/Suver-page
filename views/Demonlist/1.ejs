<body>

  <%- include("../partials/navigationD.html") %>

    <div class="card Info">
        <div class="card-body">
          <h5 class="card-title"> <%= Demonlist['Top1'].name %> </h5>
          <h6 class="card-subtitle mb-2"> by <%= Demonlist['Top1'].creator %></h6>
          <p class="card-text"></p>
          <iframe width="560" height="315" src="<%= Demonlist['Top1'].video %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          <h4>Level ID: <%= Demonlist['Top1'].id %></h4> 
          <h4>Level Difficulty: <%= Demonlist['Top1'].Difficulty %></h4>
          <h4>Level Creator: <%= Demonlist['Top1'].creator %></h4>
          <h4>Demonlist Score: <%= Demonlist['Top1'].Score %></h4>
        </div>
      </div>
      <br>
      <div class="card users">
        <div class="card-body">
          <h5 class="card-title"> Records </h5>
          <h6 class="card-subtitle mb-2"> records registered</h6>
          <p class="card-text"></p>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Record Holder</th>
                <th scope="col">Progress</th>
                <th scope="col">Proof</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"><img
                  src="<%= Records['Top1'][0].country %>"
                  srcset="https://flagcdn.com/w80/ca.png 2x"
                  width="30"></th>
                <td><%= Records['Top1'][0].name %></td>
                <td><%= Records['Top1'][0].progress %>%</td>
                <td><a href="<%= Records['Top1'][0].video %>">youtube</a></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
</body>
</html>