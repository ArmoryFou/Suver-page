        <%= description %>
    </p>

    <% if(image != null) {%>
    <img src="<%= image %>" class="image">

    <% } %>
</div>
<div class="comments">
    <h3>comentarios</h3>
    <form action="/articles/<%=id%>/comments/create" method="post">
        <input type="text" name="comment" id="comment" placeholder="Comentario" required>
        <input type="submit" class="btn-comment" value="Comentar">
    </form>

    <% for(let comment of comments){ %>
      <div class="comment mt-4 text-justify float-left">
        <img src="<%=comment.pp%>" alt="" class="rounded-circle" width="40" height="40">
        <a href="/profiles/<%=comment.user_id%>"><%=comment.username%></a>
        <span>   <%=comment.createdAt.toString().substring(0,21)%></span>
        <br>
        <p><%=comment.comment%></p>
    </div>
    <% } %>
   
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if(typeof alert != "undefined") { %>

  <script>
    Swal.fire({
      title: "<%= alertTitle %>",
      text: "<%= alertMessage %>",
      icon: "<%= alertIcon %>",
      showConfirmButton: <%= showConfirmButton %>,
      timer: <%= timer %>
    }).then(()=>{
