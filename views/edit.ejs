  <body>
    <div class="container">
      <h1>Upload an Image</h1>
      <img src="#" alt="Preview" id="image-preview" class="hidden">
      <form action="/loading" enctype="multipart/form-data" method="post">
        <div class="upload-btn-wrapper">
          <label class="label-file" for="image-upload">Browse...</label>
          <input type="file" name="image" id="image-upload" accept="image/*">
        </div>
        <input class="button upload" type="submit" value="Upload">
      </form>
      <a href="#" class="button back">Back</a>
    </div>
    <script>
      window.addEventListener('load', () => {
        start();
      });
  
      function start() {
        const input = document.getElementById("image-upload");
        input.addEventListener("change", () => {
          const preview = document.getElementById("image-preview");
          if (input.files.length > 0) {
            const file = input.files[0];
            const reader = new FileReader();
    
            reader.addEventListener("load", function () {
              preview.src = reader.result;
              preview.classList.remove("hidden");
            });
    
            reader.readAsDataURL(file);
          } else {
            preview.src = "#";
            preview.classList.add("hidden");
          }
        });
      }
    </script>
